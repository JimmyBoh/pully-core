{
  "name": "pully-core",
  "version": "0.8.1",
  "description": "Shared models used by pully, scany, and pully-server.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rimraf ./dist/*",
    "build": "tsc",
    "test": "tsc && nyc --color -a ava -v",
    "version": "git add -A",
    "preversion": "rimraf ./dist/* && tsc && nyc --color -a ava -v",
    "postversion": "git push && git push --tags && npm publish",
    "inform-coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jimbuck/pully-core.git"
  },
  "author": "Jim Buck <jim@jimbuck.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jimbuck/pully-core/issues"
  },
  "homepage": "https://github.com/jimbuck/pully-core#readme",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.0",
    "@types/node": "^12.12.22",
    "ava": "^2.4.0",
    "coveralls": "^3.0.9",
    "nyc": "^15.0.0",
    "rimraf": "^3.0.0",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "lodash.template": "^4.5.0",
    "sanitize-filename": "^1.6.3",
    "url-pattern": "^1.0.3",
    "ytdl-core": "^1.0.3"
  },
  "ava": {
    "serial": true,
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "timeout": "2m",
    "include": [
      "src/**"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "src/debug.ts"
    ]
  }
}
